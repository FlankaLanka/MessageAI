rules_version = '2';

// Firebase Storage Security Rules for MessageAI
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload profile pictures
    match /profilePictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload voice messages
    match /voiceMessages/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload chat images
    match /chatImages/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read any file they have access to
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
